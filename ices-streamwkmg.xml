<bitrate>192</bitrate>
<samplerate>44100</samplerate>
<channels>2</channels>
<quality>0</quality>

<server>
<hostname>localhost</hostname> <!-- Use localhost inside container -->
<port>10000</port>
<password>Jjbutter12</password>
